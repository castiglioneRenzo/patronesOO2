package ar.edu.info.unlp.ejercicio_6;

public class Temporario extends Empleado{
	private int horasTrabajadas;
	private int cantHijos;
	private boolean casado;
	
	public Temporario() {
		this.cantHijos = 0;
		this.casado = false;
	}
	public int getHorasTrabajadas() {
		return horasTrabajadas;
	}
	public void setHorasTrabajadas(int horasTrabajadas) {
		this.horasTrabajadas = horasTrabajadas;
	}
	public int getCantHijos() {
		return cantHijos;
	}
	public void setCantHijos(int cantHijos) {
		this.cantHijos = cantHijos;
	}
	public boolean isCasado() {
		return casado;
	}
	public void setCasado(boolean casado) {
		this.casado = casado;
	}
	
	public double sueldo() {
		return 0;
	}
	
	public float sueldoBasico() {
		float sueldo = 20000;
		sueldo += (this.horasTrabajadas * 300);
		return sueldo;
	}
	
	public float sueldoAdicional() {
		float sueldo = 2000 * this.cantHijos;
		if(this.casado) {sueldo += 5000;}
		return sueldo;
	}
	public double descuento() {
		double descuento = this.sueldoBasico() * (0.13);
		descuento += this.sueldoAdicional() * (0.15);
		return descuento;
	}

}
